%section.sign_in.container
  .row
    .col-md-3.col-md-offset-3
      = form_tag sessions_path, :class => 'sign_in', :method => :post do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group
            %label Email
            = text_field_tag :email, '', :class => 'form-control', :autofocus => true
          .form-group
            %label Password
            = password_field_tag :password, '', :class => 'form-control'
        %fieldset.action
          %input(type="submit" value="Sign in" class="btn btn-default")
          = link_to 'Forgot Password', new_password_recovery_path
