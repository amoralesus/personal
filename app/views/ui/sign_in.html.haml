%section.sign_in.container
  .row
    .col-md-4.col-md-offset-3
      %form.sign_in
        %header
          %h1 Sign in
        %div{:class => "form-group"}
          %label Username
          = text_field_tag 'username', nil
        %div{:class => "form-group"}
          %label Password
          = password_field_tag 'password', nil
        %button{:type => "submit", :class => "btn btn-default"}
          Submit
